<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"

    android:layout_height="145dp"
    android:background="@drawable/guest_recyclerview"
    >

    <TextView
        android:id="@+id/tvContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음악유튜버"
        android:layout_above="@+id/tvNick"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tmpContents"
        />

    <ImageView
        android:id="@+id/tmpArea"
        android:layout_above="@+id/tvNick"

        android:layout_toRightOf="@+id/RlUser"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/area"/>
    <ImageView
        android:layout_marginLeft="25dp"
        android:id="@+id/tmpContents"
        android:layout_above="@+id/tvNick"
        android:layout_toRightOf="@+id/tvArea"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/ic_work_black_24dp"/>
    <TextView

        android:id="@+id/tvArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tmpArea"
        android:textStyle="normal"

        android:text="경상남도"
        android:layout_above="@+id/tvNick"

        />
    <RelativeLayout
        android:layout_marginTop="38dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="15dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#ffffff"


        android:id="@+id/RlUser"
        >

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleX="1.82"
            android:scaleY="1.82"
            android:background="@drawable/ic_brightness_5_black_24dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:background="#00ff0000" />

    <TextView
        android:id="@+id/tvNick"
        android:text="기로로"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_toRightOf="@+id/RlUser"
        android:layout_centerVertical="true"
        android:textColor="#111"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/tvEmail"
        android:text="email : noEmail"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_toRightOf="@+id/RlUser"
        android:textColor="#919191"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tvPrice"
        android:text="15p"
        android:layout_below="@+id/tvNick"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/RlUser"
        android:textColor="#ffa569"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvIntro"
        android:text="no Introduce"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:layout_centerVertical="true"
        android:textColor="#5b5b5b"
        android:singleLine="true"
        android:textSize="15dp"
        />

</RelativeLayout>