<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".post.ContentsDrawer">

    <TextView
        android:id="@+id/tvSeoul"
        android:layout_width="116dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/tvKy"
        android:background="@drawable/ui_bar"
        android:gravity="center"
        android:text="서울"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvKy"
        android:layout_width="116dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ui_bar"
        android:gravity="center"
        android:text="경기"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvChung"
        android:layout_width="116dp"
        android:layout_height="67dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/tvKy"
        android:background="@drawable/ui_bar"
        android:gravity="center"
        android:text="충남"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvContents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/NewPost"
        android:layout_below="@+id/tvSeoul"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/NewPost"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/ui_bar"
        android:gravity="center"
        android:text="새로운 콘텐츠 작성하기"
        android:textSize="20dp" />
</RelativeLayout>