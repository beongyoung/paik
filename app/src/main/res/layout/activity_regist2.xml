<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.Regist"

    >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="111dp"
        android:layout_marginEnd="35dp"
        android:text="다음" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="262dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:gravity="end"
        android:text="wef" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/baseInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Information"
                android:textColor="#000000"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="28dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tmp243"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="11dp"
                    android:text="1. 어떤 역할을 할 수 있으세요?"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="134dp"
                    tools:layout_editor_absoluteY="28dp" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_below="@+id/tmp243"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="104dp"
                    android:checked="true"
                    android:visibility="gone"
                    android:text="유튜버 (배우)" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:layout_alignStart="@+id/checkBox1"
                    android:layout_below="@+id/checkBox1"
                    android:text="기획" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/checkBox1"

                    android:visibility="gone"
                    android:layout_below="@+id/checkBox2"
                    android:text="영상편집" />


                <TextView
                    android:id="@+id/tmp10020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter your name."
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <RelativeLayout
                    android:id="@+id/nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tmp10020"
                    android:background="@drawable/ui_contents_background"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"

                    android:layout_marginRight="40dp"
                    >



                    <EditText
                        android:id="@+id/etNick"
                        android:layout_toRightOf="@+id/tvNick"
                        android:layout_margin="5dp"
                        android:hint="Hong Gil-Dong"
                        android:gravity="center"
                        android:layout_width="800dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_below="@+id/nick">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#000"
                        android:text="Where do you live?"

                        android:textSize="18dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/tvArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_contents_background"
                        android:text="answer"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:textSize="20dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColor="#000"
                        android:text="What is your job?"
                        android:id="@+id/tvAsk"

                        android:textSize="18dp"
                        android:gravity="center"
                        />


                    <TextView
                        android:id="@+id/tvContents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ui_contents_background"
                        android:text="answer"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:textSize="20dp"
                        />

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:id="@+id/tvSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Please introduce yourself." />

                <EditText

                    android:id="@+id/etSelf"

                    android:gravity="start"

                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/tvSub"
                    android:focusedByDefault="false"
                    android:hint="Hello. My name is Hong Gil-Dong.
I can translate official documents for you.
Feel free to contact me anytime." />

            </RelativeLayout>




            <TextView
                android:id="@+id/tvChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Enter your price of services" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <EditText
                    android:id="@+id/etChannel"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:focusedByDefault="false"
                    android:gravity="center"
                    android:hint="10000" />

            </RelativeLayout>





            <Button
                android:layout_marginBottom="15dp"
                android:id="@+id/btnSaveInfo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ui_contents_background"
                android:text="save" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>